.bg-light
  .container
    .pb-3.pt-3
      .container.mt-3.mb-3.text-center
        .row
          .col-xl-6.col-lg-6
            h5  Scale Up
            img.img-fluid(src='/public/images/scaleup.png')
          .col-xl-6.col-lg-6
            h5 Design Twin &ndash; Design Innovation
            img.img-fluid(src='/public/images/designTwinDesignInnovation.png')
        .row
          .col-xl-6.col-lg-6
