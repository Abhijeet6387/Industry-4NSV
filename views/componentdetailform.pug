.container
  .card.mt-5.mb-5
    .card-body(style='display: block;\
    margin-left : auto;\
    margin-right: auto;\
    width: 25%')
      form(action='/component/getcomponentdetails' method='get' target='_blank')
        .form-group
          label(for='Level') Level:
          input#Level.form-control(type='text' placeholder='Enter Level' name='Level')
        .form-group.pb-3
          label(for='Item') Item:
          input#Item.form-control(type='text' placeholder='Enter Item' name='Item')
        button.block(type='submit' style=' display: block;\
        width: 100%;\
        border: none;\
        background-color:#aaa;\
        padding: 14px 28px;\
        font-size: 16px;\
        cursor: pointer;\
        text-align: center;') Submit
  .row
    .container
      table.table
        thead.thead-dark
          tr
            th(scope='col') Level
            th(scope='col') Item
            th(scope='col') Drawing_number
            th(scope='col') Description
        tbody
         for item in component
          tr
            th(scope='row') #{item.Level}
            td #{item.Item}
            td #{item.Description}
            td #{item.Drawing_number}
